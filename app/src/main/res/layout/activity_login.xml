<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    tools:context=".activities.WelcomeActivity">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/back_icon"
        android:fontFamily="@font/poppins_medium"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/welcome_logo" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center"
        android:text="Welcome back!\n

Glad to see you, Again!"
        android:textColor="@color/white"
        android:textSize="27dp" />

    <EditText
        android:id="@+id/email_EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/welcome_text"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/outfit_regular"
        android:hint="Email"
        android:paddingStart="18dp"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/password_EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/email_EditText"

        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_bg"
        android:drawableEnd="@drawable/ic_eye_open"
        android:fontFamily="@font/outfit_regular"
        android:hint="Password"
        android:paddingStart="18dp"
        android:paddingEnd="15dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_EditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:onClick="forgot_password"
        android:textSize="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password_EditText"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/outfit_regular"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/not_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingEnd="30dp"
        android:text="Donâ€™t have an account?"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/not_account"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/sign_up"
        android:onClick="sign_up"
        android:textColor="@color/pink"
        android:textSize="14dp" />
</RelativeLayout>