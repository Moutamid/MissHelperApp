<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:elevation="2dp"
    android:layout_margin="6dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circle_bg"
        android:backgroundTint="@color/light_blue"
        android:padding="14dp"

        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/icon"
        android:fontFamily="@font/outfit_medium"
        android:text="Application sent"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/notification_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/icon"
        android:fontFamily="@font/outfit_regular"
        android:text="Your application for Housemaid has been submitted successfully. Stay tuned for updates."
        android:textSize="13dp" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_details"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"

        android:layout_toRightOf="@id/icon"
        android:fontFamily="@font/outfit_light"
        android:text="23 minutes ago"
        android:textColor="#737373"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/delete_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_details"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/notification_time"
        android:fontFamily="@font/outfit_medium"
        android:text="Delete"
        android:gravity="end"

        android:textColor="@color/red"
        android:textSize="11dp" />

</RelativeLayout>