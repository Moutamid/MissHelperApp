<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.WelcomeActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="43dp"
            android:src="@drawable/ic_back"
            app:tint="@color/app_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/back_icon"
            android:fontFamily="@font/outfit_regular"
            android:text="Back"
            android:textColor="@color/app_color"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/outfit_medium"
            android:text="Invite a Friend"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/referral_code_layotu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:layout_margin="20dp"
        android:background="@drawable/card_bg"
        android:elevation="9dp"
        android:orientation="vertical"
        android:padding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingTop="-20dp"
            android:paddingEnd="14dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/text1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_medium"
                android:gravity="center"
                android:padding="3dp"
                android:text="Your Referral Code"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/refferal_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/card_bg"
                android:backgroundTint="#298E8DD0"
                android:fontFamily="@font/outfit_medium"
                android:gravity="center"
                android:paddingStart="11dp"
                android:paddingTop="5dp"
                android:paddingEnd="11dp"
                android:paddingBottom="5dp"


                android:text="MISS-3745"
                android:textSize="9dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@+id/text1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/refferal_code"
                android:src="@drawable/copy_icon" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/referral_code_layotu"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/card_bg"
        android:backgroundTint="#298E8DD0"
        android:elevation="0.5dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"

            android:src="@drawable/total_refferal5" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/icon"
            android:fontFamily="@font/outfit_medium"
            android:text="Total Referrals"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/title1_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/icon"
            android:fontFamily="@font/outfit_light"
            android:text="You’ve invited 5 friends to Miss Helpers."
            android:textSize="13dp" />

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/title1_details"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/app_color"
            android:fontFamily="@font/outfit_light"
            android:gravity="center"
            android:paddingStart="21dp"
            android:paddingTop="3dp"
            android:paddingEnd="21dp"
            android:paddingBottom="3dp"
            android:text="Invite More Friends"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/card_bg"
        android:backgroundTint="#298E8DD0"
        android:elevation="0.5dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"

            android:src="@drawable/total_refferal3" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/icon2"
            android:fontFamily="@font/outfit_medium"
            android:text="Total Referrals"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/title1_details2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/icon2"
            android:fontFamily="@font/outfit_light"
            android:text="3 of your referrals have been approved after completing registration."
            android:textSize="13dp" />

        <TextView
            android:id="@+id/details2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/title1_details2"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/app_color"
            android:fontFamily="@font/outfit_light"
            android:gravity="center"
            android:paddingStart="21dp"
            android:paddingTop="3dp"
            android:paddingEnd="21dp"
            android:paddingBottom="3dp"
            android:text="Invite More Friends"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/card_bg"
        android:backgroundTint="#298E8DD0"
        android:elevation="0.5dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"

            android:src="@drawable/earned_point" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/icon3"
            android:fontFamily="@font/outfit_medium"
            android:text="Earned Points"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/title1_details3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/icon3"
            android:fontFamily="@font/outfit_light"
            android:text="YYou’ve earned 200 points from successful referrals."
            android:textSize="13dp" />

        <TextView
            android:id="@+id/details3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/title1_details3"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/app_color"
            android:fontFamily="@font/outfit_light"
            android:gravity="center"
            android:paddingStart="21dp"
            android:paddingTop="3dp"
            android:paddingEnd="21dp"
            android:paddingBottom="3dp"
            android:text="Invite More Friends"
            android:textColor="@color/white" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/app_color"
        android:fontFamily="@font/outfit_regular"
        android:onClick="submit"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>